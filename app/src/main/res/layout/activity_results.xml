<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eve.myapplication.ResultsActivity"
    android:background="@drawable/bg6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="46dp"
            android:onClick="clickHome"
            android:id="@+id/imageButton"
            android:layout_gravity="right"
            android:src="@drawable/build5" />

        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="RESULTS"
            android:id="@+id/textView3"
            android:textSize="55dp"
            android:textColor="#fbfe1f"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="New Text"
            android:id="@+id/txtNameRE"
            android:background="#9bffffff"
            android:layout_weight="0.08" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:id="@+id/edtResultRE"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="#9bffffff"
            android:hint="Results" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/button10"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/h2" />

    </LinearLayout>
</RelativeLayout>
