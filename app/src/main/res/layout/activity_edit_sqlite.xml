<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eve.myapplication.EditSQLiteActivity"
    android:background="@drawable/bg6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#82ffffff"
        android:id="@+id/linearLayout4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:id="@+id/textView2"
            android:textSize="@dimen/h1"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="@dimen/edittext"
            android:layout_height="wrap_content"
            android:id="@+id/edtNameED" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Date"
            android:id="@+id/button5"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/button6"
            android:layout_alignEnd="@+id/button6"
            android:layout_gravity="right" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="@dimen/edittext"
                android:layout_height="wrap_content"
                android:id="@+id/edtDateED"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView4" />

        </LinearLayout>

        <EditText
            android:layout_width="@dimen/edittext"
            android:layout_height="wrap_content"
            android:id="@+id/edtCountED" />

        <EditText
            android:layout_width="@dimen/edittext"
            android:layout_height="wrap_content"
            android:id="@+id/edtDataED"
            android:lines="3"
            android:gravity="top" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:onClick="clickBackEdit"
        android:id="@+id/button9"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickUpdateSQLite"
        android:text="Update SQLite"
        android:id="@+id/button6"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
